{
  "name": "claude-rag",
  "version": "1.0.0",
  "description": "RAG system with Claude Code CLI integration and React chat UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./react/styles.css": "./dist/react/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/react/styles.css dist/react/styles.css",
    "dev": "bun run src/server.ts",
    "start": "bun run src/server.ts",
    "dev:tsc": "tsc --watch",
    "test": "bun test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rag",
    "claude",
    "ai",
    "vector-database",
    "lancedb",
    "chat",
    "react",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@lancedb/lancedb": "^0.23.0",
    "lucide-react": "^0.468.0",
    "mammoth": "^1.9.0",
    "pdf-parse": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pdf-parse": "^1.1.4",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/claude-rag.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/claude-rag/issues"
  },
  "homepage": "https://github.com/yourusername/claude-rag#readme"
}
